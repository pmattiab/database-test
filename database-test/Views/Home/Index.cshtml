@using database_test.Models
@model IEnumerable<ParticipantModel>

@{
    ViewBag.Title = "Home";
}

<div class="container">

    <div class="row mb-3">
        <h2>Index</h2>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Data di nascita</th>
                    <th>Email</th>
                    <th>Intolleranze alimentari</th>
                    <th>Disciplina</th>
                    <th>Sessione selezionata</th>
                    <th>Azioni</th>

                </tr>
                @foreach (ParticipantModel participant in Model)
                {
                    <tr>
                        <td>@participant.Id</td>
                        <td>@participant.Name @participant.Surname</td>
                        <td>@participant.DateOfBirth</td>
                        <td>@participant.Email</td>
                        <td>@participant.Intolerances</td>
                        <td>@participant.Discipline</td>
                        <td>@participant.Session</td>
                        <td>
                            <a
                                class="btn btn-sm btn-primary"
                                href=@Url.Action("Detail", "Home", new { id = participant.Id })>
                                Dettagli
                            </a>
                            <a
                                class="btn btn-sm btn-success"
                                href=@Url.Action("Edit", "Home", new { id = participant.Id })>
                                Modifica
                            </a>
                            <a
                                class="btn btn-sm btn-danger"
                                href=@Url.Action("Delete", "Home", new { id = participant.Id })>
                                Elimina
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

</div>

@section Scripts {

    <script>

        $(document).ready(function () {
        });

    </script>

}